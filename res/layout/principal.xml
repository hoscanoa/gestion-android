<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo10"
    android:orientation="vertical"
    tools:context=".Principal" >

    <RelativeLayout
        android:id="@+id/rltPrimario"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#6E6E6E" >

        <TextView
            android:id="@+id/txtBienbenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="  Bienvenido :"
            android:textColor="#E0F8F7"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtUsuario1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="36dp"
            android:layout_toRightOf="@id/txtBienbenido"
            android:text=" X"
            android:textColor="#E0F8F7"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rlt1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rlt11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent" >

            <ImageButton
                android:id="@+id/imgClientes"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/cliente" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgClientes"
                android:layout_centerHorizontal="true"
                android:text="Cliente"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlt12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent" >

            <ImageButton
                android:id="@+id/imgArticulo"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/productos" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgArticulo"
                android:layout_centerHorizontal="true"
                android:text="Articulo"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rlt2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rlt21"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/imgVentas"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/venta" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgVentas"
                android:layout_centerHorizontal="true"
                android:text="Ventas"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

</RelativeLayout>

          <RelativeLayout
            android:id="@+id/rlt22"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >
            <ImageButton
                android:id="@+id/imgUsuario"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/lista_usuarios" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgUsuario"
                android:layout_centerHorizontal="true"
                android:text="Usuario"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
    